{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "nodemon",
      "runtimeExecutable": "nodemon",
      "args": ["${workspaceFolder}/index.ts"],
      "restart": true,
      "runtimeArgs": [
        "-r",
        "ts-node/register",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "timeout": 20000
    }
  ]
}